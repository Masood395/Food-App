        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        }

        .card h3 {
            color: #ff5722;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .card p {
